.do xflag 3
.als am1 am
.als de1 de
.als as1 as
.als ds1 ds
.escoff ; @
.nr .g 1
.de Dd
.	rn Dd xX
.	so /usr/heirloom/lib/doctools/tmac/doc
.	Dd \\$*
.	rm xX
..
.de TH
.	rn TH xX
.	so /usr/heirloom/lib/doctools/tmac/an
.	TH \\$@
.	rm xX
..
.de th
.	rn th xX
.	ie n .so /usr/heirloom/lib/doctools/tmac/naa
.	el   .so /usr/heirloom/lib/doctools/tmac/taa
.	th \\$@
.	rm xX
..
