[colors]
black = #000000
darkcyan = #9eeeee
cyan = #eaffff

[bar/default]
monitor = ${env:MONITOR:LVDS-1}
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 14
;offset-x = 1%
;offset-y = 1%
;radius = 6.0
fixed-center = false

background = ${colors.cyan}
foreground = ${colors.black}

line-size = 0
line-color = {$xrdb.black}

border-size = 0
border-color = ${colors.black}

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = monofix:size=8;1

; Other modules: xkeyboard filesystem xbacklight backlight-acpi cpu memory temperature powermenu weather
modules-left = bspwm xwindow
modules-right = setroot

tray-position = right
tray-padding = 1

wm-restack = bspwm

;override-redirect = true

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[module/setroot]

type = custom/script
exec = setroot
interval = 1
;format-prefix = ""
click-left = bspc node -f prev.local

[module/xwindow]
type = internal/xwindow
label = %title:0:50:â€¦%
click-left = bcpc node -f next.local
;click-left = st -e mutt
;format-padding = 4
format-background = ${colors.cyan}

[module/bspwm]
type = internal/bspwm
click-left=
label-focused = %index%:%name%
label-focused-foreground = ${colors.black}
label-focused-background = ${colors.darkcyan}
label-focused-underline= ${colors.black}
label-focused-padding = 1

label-occupied = %index%:%name%
label-occupied-underline = ${colors.black}
label-occupied-padding = 1

label-urgent = %index%:%name%!
label-urgent-background = ${colors.black}
label-urgent-foreground = ${colors.cyan}
label-urgent-padding = 1

label-empty = 
label-empty-foreground = ${colors.black}
label-empty-padding = 0

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

;[global/wm]
;margin-top = 5
;margin-bottom = 5
