XF86Audio{Raise,Lower}Volume
	amixer set Master 5%{+,-}
XF86AudioMute
	amixer set Master toggle
XF86Launch1
	stfloat nnn
XF86ScreenSaver
	slock
XF86Display
	lxrandr
XF86Audio{Next,Prev,Play}
	mpc -h /var/run/user/1000/mpd.sock {next,prev,toggle}
#	mocp {--next,--previous,--toggle-pause}
super + {Right,Left,Down}
	mpc -h /var/run/user/1000/mpd.sock {next,prev,toggle}
#	mocp {--next,--previous,--toggle-pause}
XF86MonBrightness{Up,Down}
	xbacklight {-inc,-dec} 5
{_,shift + ctrl +,shift +,ctrl +,super +,super + shift +} Print
	screenshot { ,-s -u,-s,-u,-w,-w -u}
super + p
	dmenu_run
super + shift + s
	mbsync -a
super + a
	torsocks mpv `xsel -p`
super + x
	passmenu
super + s
	dsurfraw
super + d
	addbmark
super + Return
	st
F13
	plumb `xsel -p`
shift + F13
	oiscat `xsel -p`
ctrl + shift + w
	echo nil
super + F1
	notify-send -t 30000  "Fortune" "$(fortune lib/q)"

