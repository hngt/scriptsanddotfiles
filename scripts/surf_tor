#!/bin/sh
export http_proxy="socks5://localhost:9050"
mkdir -p "/run/user/"$(id -u)""
xidfile="/run/user/"$(id -u)"/glinks-tabbed.xid"
cookiefile=$(mktemp /tmp/cookie.XXXXXXXX)
useragent="$(shuf -n1 $HOME/.common-user-agents)"
if [ "$#" -gt 0 ];
then
	uri="$1"
fi

runtabbed() {
	tabbed -cdn Links -r 3 surf -N -e '' -d -c $cookiefile -u "$useragent" "$uri" >"$xidfile" \
		2>/dev/null
}

if [ ! -r "$xidfile" ];
then
	runtabbed
else
	xid=$(cat "$xidfile")
	xprop -id "$xid" >/dev/null 2>&1
	if [ $? -gt 0 ];
	then
		runtabbed
	else
		surf -d -N -c $cookiefile -e "$xid" -u "$useragent" "$uri" >/dev/null 2>&1
	fi
fi

rm $cookiefile
