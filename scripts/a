#!/bin/dash
export SHELL="/bin/ksh"
export acmeshell="/bin/ksh"
export TERM=dumb
export PAGER='nobs'
mkdir -p /tmp/mnt/acme
if [ "$(pgrep plumber)" ]; then
    echo plumber is running
else
    echo starting plumber
    plumber
fi
acme_bin_dir=$( cd $(dirname $0) && pwd )
acme -a -F '/mnt/font/IBM Plex Sans/10a/font' -f '/mnt/font/IBM Plex Mono/10a/font' "$1" &
sleep 1
9pfuse `namespace`/acme /tmp/mnt/acme
