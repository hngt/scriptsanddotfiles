#!/bin/sh
day="$(date +%u)"

{
	printf 'GET THE BLOOD FLOWING: %s\n' "$HOME/videos/$(shuf -n1 $HOME/videos/bloodflowin.m3u)"
	[ "$day" -eq "1" ] && printf "PREPARE FILMS FOR THE WEEK\n"
	echo $day | grep -E '[26]' > /dev/null && printf 'FILM FOR TODAY %s \n' "$(shuf -n1 $HOME/.films)"
	echo $day | grep -E '[15]' > /dev/null && printf 'YES ITS WORK OUT DAY\n'
	cat /tmp/ex
	sfeed_acme $HOME/.sfeed/feeds/* | 9 awk '/^N/{print;getline;print}'
	} | plumb -i -d edit -a 'action=showdata filename=/news/'$(date +'%H%M%S')
